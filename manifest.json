{
  "name": "Weather information",
  "description": "When you press a certain button, displays weather information",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "16": "icons/info-16.png",
    "32": "icons/info-32.png",
    "64": "icons/info-64.png",
    "128": "icons/info-128.png"
  },
  "action": {
    "default_popup": "weather_popup.html"
  },
  "permissions": ["scripting", "activeTab", "tabs", "storage"],
  "content_scripts": [
    {
      "matches": ["https://www.npr.org/*"],
      "js": ["js/weather_buttons.js"],
      "css": ["css/styles_content.css"]
    }
  ],
  "host_permissions": ["https://www.npr.org/*"],
  "background": {
    "service_worker": "js/background.js"
  }
}
